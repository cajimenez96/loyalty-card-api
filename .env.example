# Application
NODE_ENV=development
PORT=3000
APP_NAME=Loyalty Card API

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/loyalty-card
# For MongoDB Atlas use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/loyalty-card?retryWrites=true&w=majority

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Loyalty Card <noreply@loyaltycard.com>

# Optional: SendGrid (alternative to NodeMailer)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@loyaltycard.com

# Winner Configuration
WINNER_CODE_LENGTH=5
WINNER_THRESHOLD_POINTS=100

# Notification Settings
NOTIFICATION_PROVIDER=twilio
# Options: twilio | vonage
EMAIL_PROVIDER=nodemailer
# Options: nodemailer | sendgrid
