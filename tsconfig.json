{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@clients/*": [
        "src/clients/*"
      ],
      "@campaigns/*": [
        "src/campaigns/*"
      ],
      "@sales/*": [
        "src/sales/*"
      ],
      "@products/*": [
        "src/products/*"
      ],
      "@notifications/*": [
        "src/notifications/*"
      ],
      "@metrics/*": [
        "src/metrics/*"
      ]
    }
  }
}